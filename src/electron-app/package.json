{
  "name": "@boilerplate/electron-app",
  "version": "1.0.0",
  "description": "Electron Desktop Application",
  "main": "dist/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "electron .",
    "build": "tsc",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "electron:pack": "electron-builder",
    "electron:dist": "pnpm build && electron-builder"
  },
  "build": {
    "appId": "com.example.boilerplate",
    "productName": "Boilerplate",
    "directories": {
      "output": "../../dist/packages"
    },
    "files": [
      "dist/**/*",
      "../../src/frontend/dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@electron-toolkit/utils": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2"
  }
}
